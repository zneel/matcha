{
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:node/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "strict": ["error"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "no-irregular-whitespace": ["error", { "skipRegExps": true }]
  }
}
